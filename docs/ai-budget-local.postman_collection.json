{
  "info": {
    "name": "Sand Dollar AI Budget (Local Demo)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Sample requests for the AI budgeting endpoints when running the local profile seed."
  },
  "item": [
    {
      "name": "Login (obtain cookies)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"ai.demo@sanddollar.local\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "AI Budget Snapshot",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/ai/budget/snapshot",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "ai",
            "budget",
            "snapshot"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Generate AI Budget",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"month\": \"2025-01\",\n  \"goals\": [\n    \"Build emergency fund to $5k by March\",\n    \"Pay down credit card $200 per month\"\n  ],\n  \"style\": \"balanced\",\n  \"constraints\": {\n    \"mustKeepCategories\": [\"Rent\"],\n    \"categoryCaps\": {\n      \"Dining\": 300\n    }\n  },\n  \"notes\": \"Use local demo dataset inputs\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/ai/budget/generate",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "ai",
            "budget",
            "generate"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Accept AI Budget",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"month\": \"2025-01\",\n  \"targetsByCategory\": [\n    { \"category\": \"Rent\", \"target\": 1500, \"reason\": \"Monthly rent payment\" },\n    { \"category\": \"Groceries\", \"target\": 380, \"reason\": \"Keep spending near recent average\" },\n    { \"category\": \"Dining\", \"target\": 300, \"reason\": \"Respect dining cap\" }\n  ]\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/ai/budget/accept",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "ai",
            "budget",
            "accept"
          ]
        }
      },
      "response": []
    }
  ]
}
